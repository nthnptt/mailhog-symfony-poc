{% extends "base.html.twig" %}

{% block body %}
    <form method="post" action="{{ path('mail.send') }}">
        <div>
            <label for="to">Mail :
                <input type="email" name="to">
            </label>
        </div>
        <div>
            <label for="subject">Subject :
                <input type="text" name="subject">
            </label>
        </div>
       <div>
           <label for="content">Content :
               <textarea name="content"></textarea>
           </label>
       </div>
        <input type="submit">
    </form>
{% endblock %}